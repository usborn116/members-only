<div class="post-container">
  <% @posts.reverse_each do |post| %>
  <div class="post">
    <% if user_signed_in? %>
      <p class="author"><%= post.user.email %> said:</p>
    <% else %>
      <p class="author">Anonymous said:</p>
    <% end %>
    <p class="post-content"><%= post.body %></p>
  </div>
  <% end %>
</div>